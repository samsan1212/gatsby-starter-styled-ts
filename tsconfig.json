{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~services/*": ["./src/services/*"],
      "~components/*": ["./src/components/*"],
      "~assets/*": ["./src/assets/*"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "gatsby-provider-wrapper.tsx"],
  "exclude": ["gatsby-browser.js", "gatsby-node.js", "gatsby-ssr.js"]
}
